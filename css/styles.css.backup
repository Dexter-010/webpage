/* Docs Hub Layout */
.docs-hub-container {
    min-height: calc(100vh - 65px - 81px); /* screen - nav - footer */
}

.docs-hub-header {
    max-width: 1280px;
    margin: 0 auto;
    padding: 48px 24px 0;
}

.docs-hub-header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 32px;
}

.docs-hub-brand {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--gray-400);
}

.docs-hub-title {
    margin-top: 8px;
    font-size: 30px;
    font-weight: 700;
}

.docs-hub-search-wrapper .form-control {
    width: 100%;
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(31, 41, 55, 0.4);
    padding: 12px 16px 12px 48px;
    font-size: 16px;
    color: var(--gray-200);
    backdrop-filter: blur(4px);
}

.docs-hub-search-wrapper .form-control::placeholder {
    color: var(--gray-500);
}

.docs-hub-search-wrapper .search-icon {
    left: 16px;
    color: var(--gray-500);
}

.docs-hub-grid {
    max-width: 1280px;
    margin: 0 auto;
    padding: 40px 24px 96px;
    display: grid;
    gap: 20px;
    grid-template-columns: repeat(1, 1fr);
}

@media (min-width: 640px) {
    .docs-hub-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (min-width: 1024px) {
    .docs-hub-grid {
        grid-template-columns: repeat(3, 1fr);
    }
}

.docs-hub-tile {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 16px;
    text-decoration: none;
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(31, 41, 55, 0.25);
    padding: 24px;
    box-shadow: 0 0 0 1px rgba(255, 255, 255, 0.02);
    transition: transform 0.2s ease, border-color 0.2s ease, background-color 0.2s ease, box-shadow 0.2s ease;
}

.docs-hub-tile:hover {
    transform: translateY(-2px);
    border-color: var(--cyan-700);
    background: rgba(31, 41, 55, 0.5);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
}

.docs-hub-tile-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 12px;
    background-color: rgba(34, 211, 238, 0.1);
    border: 1px solid rgba(34, 211, 238, 0.2);
    color: var(--cyan-400);
}

.docs-hub-tile-title {
    font-size: 18px;
    font-weight: 600;
    color: var(--gray-200);
}

.docs-hub-tile-desc {
    margin-top: 4px;
    font-size: 14px;
    color: var(--gray-400);
}

.docs-hub-empty-state {
    margin-top: 96px;
    text-align: center;
    color: var(--gray-500);
}

.docs-tree-section {
    max-width: 1280px;
    margin: 64px auto 96px;
    padding: 0 24px;
}

.docs-tree-header {
    display: flex;
    flex-direction: column;
    gap: 6px;
    margin-bottom: 20px;
}

.docs-tree-eyebrow {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.22em;
    color: var(--gray-500);
}

.docs-tree-title {
    font-size: 24px;
    font-weight: 700;
    color: var(--gray-100);
}

.docs-tree-desc {
    max-width: 720px;
    font-size: 15px;
    color: var(--gray-400);
}

.docs-tree {
    border-radius: 18px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: rgba(15, 23, 42, 0.55);
    padding: 16px 20px;
}

.docs-tree-branch {
    border-radius: 14px;
    margin-bottom: 8px;
    padding: 4px 8px;
    transition: background-color 0.2s ease;
}

.docs-tree-branch[open] {
    background: rgba(30, 41, 59, 0.6);
}

.docs-tree-branch:last-of-type {
    margin-bottom: 0;
}

.docs-tree-branch-summary {
    list-style: none;
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 15px;
    font-weight: 600;
    color: var(--gray-100);
    cursor: pointer;
}

.docs-tree-branch-summary::-webkit-details-marker {
    display: none;
}

.docs-tree-branch-summary:focus {
    outline: 2px solid var(--cyan-600);
    outline-offset: 2px;
}

.docs-tree-branch-caret {
    width: 12px;
    height: 12px;
    border-right: 2px solid var(--gray-500);
    border-bottom: 2px solid var(--gray-500);
    transform: rotate(-45deg);
    transition: transform 0.2s ease;
    margin-right: 4px;
}

.docs-tree-branch[open] .docs-tree-branch-caret {
    transform: rotate(45deg);
}

.docs-tree-branch-icon svg {
    width: 16px;
    height: 16px;
    color: var(--gray-400);
}

.docs-tree-items {
    margin: 10px 0 6px 28px;
    padding: 0;
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 6px;
}

.docs-tree-leaf {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 8px 12px;
    border-radius: 10px;
    color: var(--gray-300);
    text-decoration: none;
    font-size: 14px;
    transition: background-color 0.2s ease, color 0.2s ease;
}

.docs-tree-leaf:hover {
    background: rgba(45, 212, 191, 0.12);
    color: var(--cyan-200);
}

.docs-tree-leaf-icon svg {
    width: 16px;
    height: 16px;
    color: var(--gray-400);
}

body.light-mode .docs-tree-title {
    color: #0f172a;
}

body.light-mode .docs-tree-desc {
    color: #334155;
}

body.light-mode .docs-tree {
    background: rgba(255, 255, 255, 0.82);
    border-color: rgba(148, 163, 184, 0.3);
}

body.light-mode .docs-tree-branch[open] {
    background: rgba(226, 232, 240, 0.7);
}

body.light-mode .docs-tree-branch-summary {
    color: #1e293b;
}

body.light-mode .docs-tree-leaf {
    color: #334155;
}

body.light-mode .docs-tree-leaf:hover {
    color: #0f172a;
    background: rgba(14, 165, 233, 0.15);
}

